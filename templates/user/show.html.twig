{% extends 'base.html.twig' %}

{% block title %}Detalles del Usuario{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Detalles del Usuario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|join(', ') : 'Sin roles' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Volver a la lista</a>
    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Editar</a>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
